<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- تنظیم رنگ پس‌زمینه -->
    <solid android:color="@color/grey_200" />

    <!-- تنظیم حاشیه -->
    <stroke
        android:width="1dp"
        android:color="@color/grey_500" />

    <!-- تنظیم گردی گوشه‌ها -->
    <corners android:radius="12dp" />

    <!-- تنظیم padding داخلی -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
