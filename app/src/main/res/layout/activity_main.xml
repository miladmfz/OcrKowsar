<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/grey_50"
    android:orientation="vertical">

    <!-- Toolbar and AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/NavActivity_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/NavActivity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Buttons Section -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_card"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Button 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mainactivity_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="دکمه اول"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            app:backgroundTint="@color/green_700"
            app:cornerRadius="8dp"
            app:rippleColor="@color/deep_purple_300"/>

        <!-- Button 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mainactivity_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="دکمه دوم"
            android:textColor="@color/grey_1000"
            android:textSize="18sp"
            app:backgroundTint="@color/green_100"
            app:cornerRadius="8dp"
            app:rippleColor="@color/deep_purple_300"/>

        <!-- Button 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mainactivity_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="دکمه سوم"
            android:textColor="@color/grey_1000"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            app:rippleColor="@color/deep_purple_300"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
