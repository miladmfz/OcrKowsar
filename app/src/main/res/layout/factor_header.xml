<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/factor_header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:layoutDirection="rtl">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="نام مشتری :"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/factor_header_customer"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />




        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="0.5"
                android:weightSum="0.5"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="کد مشتری:"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_weight="0.25"
                    />

                <TextView
                    android:id="@+id/factor_header_customercode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_round_selected"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="0.25"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/factor_header_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/red_500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:gravity="center"
android:layout_marginRight="20sp"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="5dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="کد فاکتور:"
                    android:textColor="#000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/factor_header_code"
                    android:background="@drawable/bg_round_selected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="تایید مشتری:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/factor_header_signature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:background="@drawable/bg_round_selected"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"

            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text=" تاریخ سفارش:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/factor_header_kowsardate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:background="@drawable/bg_round_selected"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="تاریخ تحویل : "
                    android:textColor="#000000"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/factor_header_scandate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/bg_round_selected"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/factor_header_factor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="نمایش فاکتور"

                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/factor_header_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="چک کردن رسید"

                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                style="?attr/materialButtonOutlinedStyle" />




        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/factor_header_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="ارسال رسید فاکتور"
                android:textColor="@color/green_900"
                android:layout_margin="3dp"
                android:textSize="16sp"

                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/factor_header_dlt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="حذف رسید"

                android:textColor="@color/red_900"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/grey_1000"
                app:strokeWidth="1dp"
                style="?attr/materialButtonOutlinedStyle" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/red_900" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>