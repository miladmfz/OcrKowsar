<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_prosearch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    android:checkable="true"
    android:layoutDirection="rtl"
    app:checkedIconTint="@color/red_800">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/proserch_ggg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layoutDirection="rtl"
            >

            <ImageView

                android:id="@+id/good_prosearch_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/good_prosearch_totalstate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" "
                android:textColor="@color/red_900"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:padding="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/good_prosearch_img"
                app:layout_constraintEnd_toEndOf="@+id/good_prosearch_img"
                app:layout_goneMarginLeft="0dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/good_prosearch_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/overlay_dark_90"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="goodname" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/good_prosearch_goodcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="قیمت فروش"
                android:textColor="#E61243"
                android:textSize="12sp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/good_prosearch_isbn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="قیمت فروش"
                android:textColor="#247E00"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/good_prosearch_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="انتخاب"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/green_400"
            app:iconTint="@color/white" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>