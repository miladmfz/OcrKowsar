<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_zoom_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/grey_10"
    android:layoutDirection="rtl"

    >


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        >

        <EditText
            android:id="@+id/edloginconfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="کد ورودی"
            android:textSize="26sp"
            android:gravity="center"
            android:singleLine="true"
            android:maxLength="6"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnloginconfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ورود"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_700"
            android:textSize="22sp"
            android:inputType="number"
            app:rippleColor="@color/deep_purple_300"
            app:strokeColor="@color/grey_1000"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/green_600"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>