<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stacklocation_explain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_card"
    android:elevation="4dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/stacklocation_goodname_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:gravity="center"
        android:inputType="text"
        android:textColor="@color/primaryTextColor"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="نام کالا" />

    <EditText
        android:id="@+id/stacklocation_explain_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:padding="12dp"
        android:background="@drawable/bg_round_input"
        android:hint="توضیحات کالا را وارد کنید"
        android:textColor="@color/primaryTextColor"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLines="4"
        android:gravity="center" />

    <Button
        android:id="@+id/stacklocation_explain_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="اعمال"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/primaryColor"
        app:cornerRadius="8dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
