<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>                   <!--header background-->
        <item name="android:windowBackground">@color/colorPrimary</item>     <!--calendar background-->
        <item name="android:textColorSecondary">@color/colorAccent</item>    <!--days of the week-->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>

    <style name="MyButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="LoadingNormal">
        <item name="android:background">@drawable/qspinner_base</item>
        <item name="android:layout_width">@dimen/loading</item>
        <item name="android:layout_height">@dimen/loading</item>
    </style>




</resources>
